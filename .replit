modules = ["web", "nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PhotoVault Frontend"

[[workflows.workflow]]
name = "PhotoVault Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_ENV=development FLASK_DEBUG=true SECRET_KEY=\"photovault-secret-key-for-replit-development-only\" python main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36365
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:$PORT", "--workers=2", "--timeout=30", "main:app"]
